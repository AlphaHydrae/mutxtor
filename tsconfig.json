{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
